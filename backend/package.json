{
  "name": "track-it-backend",
  "version": "1.0.0",
  "description": "Backend API for Track-It task management",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint .",
    "test": "jest",
    "db:seed": "ts-node prisma/seed.ts",
    "db:seed-admin": "node scripts/seed-admin-user.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "cache:flush": "ts-node -e \"require('./src/cache/redis').getRedisClient().flushdb().then(() => console.log('Cache flushed successfully!')).catch(err => console.error('Error flushing cache:', err)).finally(() => process.exit(0))\"",
    "cache:test": "ts-node scripts/test-cache.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@track-it/shared": "file:../shared",
    "@trpc/server": "^11.1.3-canary.10",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.3",
    "express-jwt": "^8.4.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "pino": "^8.15.0",
    "pino-http": "^9.0.0",
    "prisma": "^6.7.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.17.46",
    "eslint": "^9.26.0",
    "jest": "^29.6.4",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.32.1"
  }
}
