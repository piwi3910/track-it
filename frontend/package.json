{
  "name": "track-it-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node --no-warnings --loader=ts-node/esm ./scripts/build.js",
    "build:check": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test:login": "node ./scripts/test-login.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --testPathIgnorePatterns=src/__tests__/integration",
    "test:unit:watch": "NODE_OPTIONS=--experimental-vm-modules jest --testPathIgnorePatterns=src/__tests__/integration --watch",
    "test:integration": "node ./src/__tests__/run-integration-tests.js",
    "test:integration:auth": "node ./src/__tests__/run-integration-tests.js auth",
    "test:integration:tasks": "node ./src/__tests__/run-integration-tests.js tasks",
    "test:integration:comments": "node ./src/__tests__/run-integration-tests.js comments",
    "test:integration:templates": "node ./src/__tests__/run-integration-tests.js templates",
    "test:integration:workflows": "node ./src/__tests__/run-integration-tests.js workflows",
    "test:api-client": "NODE_OPTIONS=--experimental-vm-modules jest src/api/__tests__",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --ci --coverage"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^16.5.0",
    "@mantine/core": "^7.7.0",
    "@mantine/dates": "^7.7.0",
    "@mantine/form": "^7.7.0",
    "@mantine/hooks": "^7.7.0",
    "@mantine/notifications": "^7.7.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@tabler/icons-react": "^3.31.0",
    "@tanstack/react-query": "^5.75.6",
    "@track-it/shared": "file:../shared",
    "@trpc/client": "^11.1.2",
    "@trpc/react-query": "^11.1.2",
    "@trpc/server": "^11.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "tailwind-merge": "^3.3.0",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "@types/react": "^18.2.72",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "cross-fetch": "^4.1.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.8.4",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
